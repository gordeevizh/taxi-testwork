.card {
  background-color: var(--color-black-2);
  border-radius: 4px;
  box-shadow: 5px 5px 10px -5px var(--color-shadow-white-1);
  display: flex;
  flex-direction: column;
  max-width: 1000px;
  min-height: 700px;
  padding: 1rem 2rem;
  transition: background-color 300ms ease-in-out, box-shadow 300ms ease-in-out;
  width: 100%;
}